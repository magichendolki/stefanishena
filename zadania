1.
CREATE DATABASE sklad_stefanishena;
2..
create table Tovar_stefanishena(id_tov int not null auto_increment, name_tovar varchar(100) character set 'utf8',price float, primary key(id_tov))
create table TTN_stefanishena(N_Nakladnoi int,DataP date,Postavchik varchar(100) character set 'utf8',id_tov int not null,kol_vo int,FOREIGN KEY (id_tov) REFERENCES Tovar_ stefanishena (id_tov))
3.
Create user stefanishena_user1;
Create user stefanishena_user2;
4.
Set password for stefanishena _user1 = "qwerty";
Set password for stefanishena _user2 = "ytrewq";
5.
Grant select on sklad_ stefanishena.* to stefanishena _user1  with grant option;
Grant update on sklad_ stefanishena.* to stefanishena _user2  with grant option;
6.
stefanishena _user1
set password=ghjkl
select * from TTN_ stefanishena;
7.
stefanishena _user2
UPDATE Tovar_stefanishena
SET    price = 1009
WHERE  id_tov = (SELECT Max(id_tov) FROM   TTN_ stefanishena);
8.
UPDATE TTN_ stefanishena
SET    DataP = 26.04.2021
WHERE  N_Nakladnoi = (SELECT Max(N_Nakladnoi) FROM   TTN_ stefanishena);
9.
root
Grant update ON TTN_ stefanishena.* and Tovar_ stefanishena.* to stefanishena _user1;
Grant insert ON TTN_ stefanishena.* and Tovar stefanishena.* to stefanishena _user1;
Grant select ON Tovar_ stefanishena.* to stefanishena _user1;
REVOKE update ON Tovar_ stefanishena.* FROM stefanishena _user2;
Grant delete ON TTN_ stefanishena.* to stefanishena _user2;
